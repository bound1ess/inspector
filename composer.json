{
    "name": "bound1ess/inspector",
    "description": "Xdebug-independent code coverage analysis tool.",
    "license": "MIT",
    "bin": [
        "bin/inspector"
    ],

    "require": {
        "symfony/console": "~2.6",
        "php-packages/container": "~1.1"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "mockery/mockery": "~0.9",
        "bound1ess/essence": "~1"
    },

    "autoload": {
        "psr-4": {
            "Inspector\\": "src/Inspector/"
        }
    },

    "autoload-dev": {
        "files": [
            "tests/TestCase.php"
        ]
    }
}
